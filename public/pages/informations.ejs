<div class="jumbotron text-center">
	<h1>Information Showcase Page</h1>
	
	<p>{{ message }}</p>

  <div ng-controller="informationsController as list">
	<table align="center" valign="middle">
	  <tbody ng-repeat="information in informations | orderBy:'-upvotes'">
        <tr style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle"; >
        	<td>
            <span class="glyphicon glyphicon-thumbs-up" ng-click="incrementUpvotes(information.id)"></span>
              {{information.upvotes}}
             </td>
             <td> 
             <span style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle";>{{information.paymenttype}}</span>
         	</td>
          <td>
          <span style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle";>{{information.paymenttype2}}</span>
          </td>
          <td>
          <span style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle";>{{information.paymenttype1}}</span>
          </td>

             <td>
            <span class="glyphicon glyphicon-euro"></span> 
            {{information.amount}}  
    		</td>
 			<td>
      
      <span style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle";>

      
      <button type="button" class="btn btn-default" ng-click="delete(information.id)">
          <span class="glyphicon glyphicon-remove"></span> Remove 
        </button>
        
        </span>    
             </td>
    	</tr>
      </tbody>
    </table> 
  </div>
</div>